\begin{tcolorbox}[enhanced jigsaw, opacityback=0, coltitle=black, toprule=.15mm, breakable, arc=.35mm, left=2mm, bottomrule=.15mm, bottomtitle=1mm, colframe=quarto-callout-caution-color-frame, leftrule=.75mm, rightrule=.15mm, colback=white, colbacktitle=quarto-callout-caution-color!10!white, titlerule=0mm, opacitybacktitle=0.6, title=\textcolor{quarto-callout-caution-color}{\faFire}\hspace{0.5em}{Prueba}, toptitle=1mm]

